@{
    ViewData["Title"] = "Gestión de Matrículas";
}

<div class="container-fluid">
    <div class="card mb-4 shadow">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h6 class="font-weight-bold text-primary m-0">@ViewData["Title"]</h6>
            <button id="btnNuevo" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Nueva Matrícula
            </button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="tblMatriculas" class="table-bordered table" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Estudiante</th>
                            <th>Sección</th>
                            <th>Año Escolar</th>
                            <th>Expediente</th>
                            <th>Fecha Matrícula</th>
                            <th>Observaciones</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_Form" model="new Matricula()" />

@section Scripts {
    <script src="~/js/matricula.js"></script>
}