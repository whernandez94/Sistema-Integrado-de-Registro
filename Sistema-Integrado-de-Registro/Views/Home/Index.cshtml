@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 text-center">
    <h1 class="display-4 mb-4">
        <i class="bi bi-mortarboard-fill text-primary"></i> Sistema de Administración Escolar
    </h1>
    <p class="lead mb-5">Gestione fácilmente estudiantes, docentes, materias y registros académicos.</p>

    <div class="row justify-content-center">
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-lines-fill display-4 text-success"></i>
                    <h5 class="card-title mt-3">Estudiantes</h5>
                    <p class="card-text">Registra y gestiona la información de los alumnos.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-badge-fill display-4 text-info"></i>
                    <h5 class="card-title mt-3">Docentes</h5>
                    <p class="card-text">Controla los datos y acceso del personal docente.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-journal-bookmark-fill display-4 text-warning"></i>
                    <h5 class="card-title mt-3">Asignaturas</h5>
                    <p class="card-text">Administra las materias disponibles en el sistema.</p>
                </div>
            </div>
        </div>
    </div>

</div>