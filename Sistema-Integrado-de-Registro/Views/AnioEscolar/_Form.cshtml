@model Sistema_Integrado_de_Registro.Models.AnioEscolar

<form id="formAnioEscolar">
    <input type="hidden" name="id" value="@Model?.Id" />
    <div class="mb-3">
        <label for="anio" class="form-label">Año Escolar (formato: 2024-2025)</label>
        <input type="text" name="anio" class="form-control" value="@Model?.Anio" required pattern="^\d{4}-\d{4}$" />
        <div class="invalid-feedback">Ingrese un año válido (ej: 2024-2025).</div>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
