@model Inasistencia

<div class="modal fade" id="modalForm" tabindex="-1" aria-labelledby="modalFormLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalFormLabel">@(Model.Id == 0 ? "Nuevo Registro" : "Editar Registro")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formInasistencia">
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label class="form-label">Estudiante</label>
                        <select asp-for="EstudianteId" class="form-control" required>
                            <option value="">Seleccione un estudiante</option>
                            @foreach (var item in ViewBag.Estudiantes)
                            {
                                <option value="@item.Id">@item.Nombre</option>
                            }
                        </select>
                        <span asp-validation-for="EstudianteId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Asignatura</label>
                        <select asp-for="AsignaturaId" class="form-control" required>
                            <option value="">Seleccione una asignatura</option>
                            @foreach (var item in ViewBag.Asignaturas)
                            {
                                <option value="@item.Id" data-porcentaje="@item.PorcentajeInasistencia">@item.Nombre (Límite: @item.PorcentajeInasistencia%)</option>
                            }
                        </select>
                        <span asp-validation-for="AsignaturaId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Año escolar</label>
                        <select asp-for="AnioEscolarId" class="form-control" required>
                            <option value="">Seleccione un año escolar</option>
                            @foreach (var item in ViewBag.AniosEscolares)
                            {
                                <option value="@item.Id">@item.Anio</option>
                            }
                        </select>
                        <span asp-validation-for="AnioEscolarId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Lapso" class="form-label"></label>
                        <select asp-for="Lapso" class="form-control" required>
                            <option value="">Seleccione un lapso</option>
                            @foreach (var item in ViewBag.Lapsos)
                            {
                                <option value="@item">Lapso @item</option>
                            }
                        </select>
                        <span asp-validation-for="Lapso" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Porcentaje" class="form-label"></label>
                        <input asp-for="Porcentaje" class="form-control" type="number" min="0" max="100" required />
                        <small class="text-muted" id="limiteInasistencia">Límite permitido: 0%</small>
                        <span asp-validation-for="Porcentaje" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Observaciones" class="form-label"></label>
                        <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Observaciones" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>