@model Sistema_Integrado_de_Registro.Models.Institution

@{
    ViewData["Title"] = "Institución";
}

<!-- DataTale -->
<div class="card mb-4 shadow">
    <div class="card-header d-flex justify-content-between align-items-center py-3">
        <h6 class="font-weight-bold text-primary m-0">@ViewData["Title"]</h6>
        <button class="btn btn-primary btn-sm" id="btnNuevo"><i class="fas fa-plus me-1"></i>Nueva institucion</button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table-bordered table" id="tablaInstituciones" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Director</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalInstitucion" tabindex="-1" aria-labelledby="modalInstitucionLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalInstitucionLabel">Institucion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="modalIntitucionesBody">
                @await Html.PartialAsync("_Form", new Sistema_Integrado_de_Registro.Models.Institution())
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/institution.js"></script>
}
