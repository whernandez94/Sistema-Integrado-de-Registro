@{
    ViewData["Title"] = "Gestión de Notas";
}

<div class="container-fluid">
    <div class="card mb-4 shadow">
        <div class="card-header d-flex justify-content-between align-items-center py-3">
            <h6 class="font-weight-bold text-primary m-0">@ViewData["Title"]</h6>
            <button id="btnNuevo" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Nueva Nota
            </button>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Año Escolar</label>
                    <select id="anioEscolarId" class="form-control">
                        <option value="">Cargando...</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Asignatura</label>
                    <select id="asignaturaId" class="form-control">
                        <option value="">Todas</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button id="btnFiltrar" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Filtrar
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table id="tblNotas" class="table-bordered table" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Estudiante</th>
                            <th>Asignatura</th>
                            <th>Periodo 1</th>
                            <th>Periodo 2</th>
                            <th>Periodo 3</th>
                            <th>Promedio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_Form" model="new Nota()" />

@section Scripts {
    <script src="~/js/notas.js"></script>
}